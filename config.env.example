# ===========================================
# OCR AI Translate Overlay - Configuration Template
# ===========================================
#
# IMPORTANT: This is a template file. DO NOT put real API keys here!
#
# Setup Instructions:
# 1. Copy this file to config.env: cp config.env.example config.env
# 2. Fill in your real API keys in config.env
# 3. Or set system environment variables (recommended for production)
#
# ===========================================

# API Keys (REQUIRED)
GEMINI_API_KEY=your_gemini_api_key_here
FIREBASE_API_KEY=your_firebase_api_key_here

# Firebase Configuration (REQUIRED)
FIREBASE_AUTH_DOMAIN=your-project.firebaseapp.com
FIREBASE_DATABASE_URL=
FIREBASE_STORAGE_BUCKET=your-project.firebasestorage.app

# Model Settings
NLLB_MODEL_SIZE=600M
M2M_MODEL_SIZE=418M

# Translation Settings
DEFAULT_TARGET_LANG=vi
MIN_CONFIDENCE=0.7
MAX_TEXT_LENGTH=1000

# Performance Settings
USE_GPU=true
CACHE_TRANSLATIONS=true
CACHE_SIZE=1000

# Logging
LOG_LEVEL=INFO
LOG_TRANSLATIONS=false

# Capture Settings
CAPTURE_MODE=window
# Capture mode: "window" (Window DC Capture - no overlay interference) or "screen" (legacy full-screen capture)

# Overlay Settings
OVERLAY_DISPLAY=positioned
# Overlay display: "list" (centralized window) or "positioned" (overlay at text locations)
POSITIONED_FONT_SIZE=12
POSITIONED_SHOW_BBOX=true
POSITIONED_OPACITY=0.85
SUBTITLE_POSITION=bottom
# Subtitle position: "bottom" (default), "top", or "center"

# Scan Mode Settings
SCAN_MODE=snapshot
# Scan mode: "realtime" (continuous monitoring) or "snapshot" (scan once then stop)
